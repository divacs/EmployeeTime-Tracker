<!DOCTYPE html>
<html>
<head>
    <title>Pie Chart</title>
</head>
<body>
    <h1>Pie Chart - Total Worked Hours by Employee</h1>

    <div>
        <img src="@Url.Action("Employee", "Employee")" alt="Pie Chart" />
    </div>

    <div>
        <h2>Legend:</h2>
        <ul>
            @foreach (var employee in Model)
            {
                <li>@employee.EmployeeName - @employee.TotalWorkedHours hours</li>
            }
        </ul>
    </div>
</body>
</html>

